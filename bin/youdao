#! /usr/bin/env ruby

require "net/http"
require "json"

keyfrom = 'Alfred'
key = 1963786550

USERNAME = "###"
PASSWORD = "###"

def define_word(query, keyfrom, key)
  query.gsub(/ /, "20%")
  uri = URI("http://fanyi.youdao.com/openapi.do?keyfrom=#{keyfrom}&key=#{key}&type=data&doctype=json&version=1.1&q=#{query}")
  begin
    res = JSON.parse(Net::HTTP.get(uri))
    index = 0
    output = []
    if (res["translation"] && res["translation"][0] != query)
      item = res["translation"][0]
      if (res["basic"] and res["basic"]["phonetic"])
        item = "#{item} [#{res["basic"]["phonetic"]}]"
      end
      output << Item.new("#{index}_#{Time.now.to_i}",
                         item,
                         item,
                         "翻译")
    end

    if (res["basic"] and res["basic"]["explains"])
      res["basic"]["explains"].each do |b|
        output << Item.new("#{index}_#{Time.now.to_i}",
                           b,
                           b,
                           "简明")
      end
    end

    if (res["web"])
      res["web"].each do |w|
        trans = w["value"].join(", ")
        output << Item.new("#{index}_#{Time.now.to_i}",
                           trans,
                           trans,
                           "网络: #{w["key"]}")
      end

      if output.size == 0
        output << Item.new("#{index}_#{Time.now.to_i}",
                           "FML",
                           "上网去查吧， 骚年",
                           "网络: #{item["key"]}")
      else
        output.unshift(Item.new(
          "index_for_add",
          "add #{query}"
          "Add #{query} to wordbook",
          ""
        ))
      end
    end

    puts to_XML(output)
  rescue
    puts "Cannot get the translation"
  end
end

def to_XML(output)
  res = output.map { |i| i.to_xml }.join
  "<items>#{res}</items>"
end

class Item
  def initialize(uid, arg, title, subtitle)
    @uid, @arg, @title, @subtitle = uid, arg, title, subtitle
  end

  def to_xml
    "<item uid=\"#{@uid}\" arg=\"#{@arg}\"><title>#{@title}</title><subtitle>#{@subtitle}</subtitle></item>"
  end
end

def add_to_wordbook(word)
  post_uri = URI("https://logindict.youdao.com/login/acc/login")
  referer = "http://account.youdao.com/login?service=dict&back_url=http://dict.youdao.com/wordbook/wordlist%3Fkeyfrom%3Dnull"
  user_agent = "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_9_3) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/34.0.1847.137 Safari/537.36"
  content_type = "application/x-www-form-urlencoded"
  host = "logindict.youdao.com"
  origin = "http://account.youdao.com"
  add_word_uri = URI("http://dict.youdao.com/wordbook/ajax?action=addword&q=#{word}")

  form_data = {
    "app" => "web",
    "tp" => "urstoken",
    "cf" => 3,
    "fr" => 1,
    "ru" => "http://dict.youdao.com/wordbook/wordlist?keyfrom=null",
    "product" => "DICT",
    "type" => 1,
    "um" => true,
    "username" => USERNAME,
    "password" => PASSWORD
  }

  # get first cookie
  res = Net::HTTP.get_response(URI(referer))
  check_res(res)

  # login
  req = Net::HTTP::Post.new(post_uri.request_uri)
  req["Host"] = host
  req["Origin"] = origin
  req["Referer"] = referer
  req["Content-Type"] = content_type
  req["User-Agent"] = user_agent
  req["Cookie"] = get_cookie(res)

  req.set_form_data(form_data)

  res = Net::HTTP.start(post_uri.hostname, post_uri.port, :use_ssl => true) do |https|
    https.request(req)
  end
  check_res(res)

  # add word
  req = Net::HTTP::Post.new(add_word_uri.request_uri)
  req["User-Agent"] = user_agent
  req["Cookie"] = get_cookie(res)

  res = Net::HTTP.start(add_word_uri.hostname, add_word_uri.port) do |http|
    http.request(req)
  end
  check_res(res)

  puts "add #{word} successfully"
rescue
  puts "failed to add #{word}"
end

def get_cookie(res)
  res.get_fields("set-cookie").reduce("") do |r, e|
    r << e.split(";")[0] + "; "
  end
end

def check_res(res)
  unless res.is_a?(Net::HTTPSuccess) || res.is_a?(Net::HTTPRedirection)
p res
    raise "Failed"
  end
end

define_word(ARGV.join(" "), keyfrom, key)
